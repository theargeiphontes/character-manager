doctype html
html
  head
    link(rel='shortcut icon', href='/images/gobo-draco.png', type='image/x-icon')
    link(rel = 'stylesheet' href = '/css/main.css')
    script(src = '/javascript/ajax.jquery.min2.1.3.js')
    script(src = '/javascript/main.js')
    title #{ character.name }
  body
    h1 #{ character.name } 
    form(action = '/pathfinder/characters/#{ charId }', name = 'charForm' method = 'post' class='saveCharForm')
      input(type="hidden" name="charId" value="#{ charId }")
      table
        tbody
        each statVal, stat in character.stats 
          tr
            td #{ stat } 
            td
              input.edit(
                type = 'number'
                name = '#{ stat }', 
                value = '#{ statVal }'
                disabled)
      input(
        type = 'button'
        value = 'Edit'
        class = 'editChar')
      input(
        type = 'submit'
        value = 'Save'
        class = 'hide saveCharButton')


