doctype html
html
  head
    script(src = '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src = '/javascript/main.js')
    link(rel = 'stylesheet' href = '/css/main.css')
    title #{ character.name }
  body
    h1 #{ character.name } 
    form(action = '/pathfinder/character/save', name = 'charForm' method = 'post' class='saveCharForm')
      input(type="hidden" name="charId" value="#{ charId }")
      table
        tbody
        each statVal, stat in character.stats 
          tr
            td #{ stat } 
            td
              input.edit(
                type = 'number'
                name = '#{ stat }', 
                value = '#{ statVal }'
                disabled)
      input(
        type = 'button'
        value = 'Edit'
        class = 'editChar')
      input(
        type = 'submit'
        value = 'Save'
        class = 'hide saveCharButton')


